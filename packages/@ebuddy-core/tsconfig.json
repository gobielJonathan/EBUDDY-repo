{
  "compilerOptions": {
    "target": "ES2020", // Modern target for better performance
    "module": "ESNext", // Use ESNext for modern module resolution
    "declaration": true, // Generate .d.ts files for type definitions
    "rootDir": "./src", // Source root for the project
    "outDir": "./dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
    "moduleResolution": "Node", // Use Node.js module resolution
    "isolatedModules": true // Ensure each file can be transpiled in isolation
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude unnecessary files
}
